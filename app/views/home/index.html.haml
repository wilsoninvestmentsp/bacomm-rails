        %ul.list-inline
          %li
            %a{:href => "http://www.tomwilsonproperties.com", :target => "_blank"}
              %span.fa.fa-globe
              www.tomwilsonproperties.com
          %li
            %span.fa.fa-map-marker
            Saratoga, CA


