<section class="top-bg">
  <div class="top-bg-inner">
    <div class="container">
      <div class="breadcrumb-top">
        <ol class="breadcrumb white">
          <li><%= link_to 'Home', root_path %></li>
          <li class="active">Connect With Meetup</li>
        </ol>
      </div>
    </div>
  </div>
</section>
<div class="container page-body resources-listing">
  <div class="row">
    <div class="col-xs-12">
      <h1>Connect With Meetup</h1>
      <div class="form-group">
        <% label_txt = meetup_token_expired? ? 'Connect' : 'Connected' %>
        <span class="btn-span add-resource pull-left">
          <%= link_to_if meetup_token_expired?, label_txt, meetup_auth_url, class: 'btn gold-btn' %>
        </span>
        <% if !meetup_token_expired? %>
          <%= link_to 'Reconnect to Meetup', meetup_auth_url, class: 'btn gold-btn' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
